<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:fitsSystemWindows="true"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:scaleType="centerCrop"
            android:src="@mipmap/splash" />
    </RelativeLayout>

    <com.incture.cherrywork.freshdirect.Utils.ProfileImageView
        android:id="@+id/user_pic"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_above="@+id/drawer_header_profile_name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_bg_profilepic"
        android:src="@mipmap/splash"></com.incture.cherrywork.freshdirect.Utils.ProfileImageView>


    <TextView
        android:id="@+id/drawer_header_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/drawer_header_profile_email"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="Shridhar Joshi"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/drawer_header_profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/app_version"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:text="shridhar.joshi@freshdirect.com"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:background="@mipmap/back"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/app_version"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:text="@string/app_version"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>