<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/splash" />
    <TextView
        android:id="@+id/tripId"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:text=""
        android:textColor="@color/white"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/orders_count"
            android:layout_width="match_parent"
            android:textSize="60sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="2"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:text="Total no of orders"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/bags_count"
            android:layout_width="match_parent"
            android:textSize="60sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="3"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:gravity="center_horizontal"

            android:text="Total no of bags"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <Button
        android:id="@+id/scan_bag"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Scan tote"
        android:layout_above="@+id/cancel_trip"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text_size"
        android:background="@android:color/holo_green_dark"
        android:layout_height="50dp"
        />
    <Button
        android:id="@+id/cancel_trip"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:text="Cancel trip"
        android:clickable="false"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text_size"
        android:background="@android:color/holo_red_dark"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>